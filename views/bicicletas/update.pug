extends ../layout 

block content 
      main.container
        .py-5.text-center
          img.d-block.mx-auto.mb-4(src='/images/logo.png', alt='', width='110', height='110')
          h2 Postear Bicicleta
          p.lead
            | Aqui puedes postear tu bicicleta aqui
        .row.g-5
        

          .col-md-6.col-lg-4.d-block.mx-auto
            h4.mb-3 Ingrese los datos
            form.needs-validation(novalidate='', action='/bicicletas/${bici.id}/update', method='POST')
              .row.g-3
                .col-12
                  label.form-label(for='id') ID 
                  input#id.form-control(type='text', placeholder='ID', required='',name='id', value=bici.id)
                  .invalid-feedback
                    | Please enter your shipping address.
                .col-12
                  label.form-label(for='color')
                    | Color
                  input#color.form-control(type='text', placeholder='color' name='color', value=bici.color)

                .col-12
                  label.form-label(for='model')
                    | Modelo 
                  input#model.form-control(type='text', placeholder='Modelo' name='model', value=bici.model)
                hr.my-4

                .col-sm-6
                  label.form-label(for='lat') Latitud 
                  input#lat.form-control(type='text', placeholder='', required='' name='lat', value=bici.ubicacion[0])
                  .invalid-feedback
                    | Valid first name is required.
                .col-sm-6
                  label.form-label(for='lng') Longitud
                  input#lng.form-control(type='text', placeholder='', required='' name='lng', value=bici.ubicacion[1])
                  .invalid-feedback
                    | Valid last name is required.
                button.w-100.btn.btn-primary.btn-lg(type='submit', value='OK') Publicar