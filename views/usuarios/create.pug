extends ../layout

block content
  a(href='/usuarios', class='btn btn-secondary mb-3') Volver

  h1 Nuevo Usuario

  form(action='/usuarios/create', method='post')
    .form-group
      label(for='nombre', class='form-label') Nombre:
      input#nombre.form-control(type='text', name='nombre', value=usuario.nombre, class=errors.nombre ? 'form-control is-invalid' : '')
      if errors.nombre
        small#nombreHelp.form-text.text-danger
          = errors.nombre.message

    .form-group
      label(for='email', class='form-label') Email:
      input#email.form-control(type='text', name='email', value=usuario.email, class=errors.email ? 'form-control is-invalid' : '')
      if errors.email
        small#emailHelp.form-text.text-danger
          = errors.email.message

    .form-group
      label(for='pwd', class='form-label') Password:
      input#pwd.form-control(type='password', name='password', class=errors.password ? 'form-control is-invalid' : '')
      if errors.password
        small#passwordHelp.form-text.text-danger
          = errors.password.message

    .form-group
      label(for='confirm_pwd', class='form-label') Confirmar Password:
      input#confirm_pwd.form-control(type='password', name='confirm_password', class=errors.confirm_password ? 'form-control is-invalid' : '')
      if errors.confirm_password
        small#confirm_passwordHelp.form-text.text-danger
          = errors.confirm_password.message

    br
    input.btn.btn-primary(type='submit', value='OK')